@using System.Globalization
@{
    ViewBag.Title = "GetByMonth";
    Layout = ViewBag.IsAdmin == 1 ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_Layout.cshtml";
}
<h1></h1>
<h2>Generate Reports By Month</h2>
<hr />

@using (Html.BeginForm("ViewAllByMonth", "Expense", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Select Year:")
        <select class="form-control" id="year" name="year">
            @for (int i = DateTime.Now.Year; i >= 2000; i--)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <div class="form-group">
        @Html.Label("Select Month:")
        <select class="form-control" id="month" name="month">
            @for (int i = 1; i <= 12; i++)
            {
                <option value="@i">@DateTimeFormatInfo.CurrentInfo.GetMonthName(i)</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Generate Report</button>
}

